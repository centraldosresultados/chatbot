    "logs": "tail -f logs/bot-manager.log",
    "clean": "rm -rf .wwebjs_auth/ logs/",
    "clean:projeto": "bash limpar-projeto.sh",
    "security": "node seguranca-sistema.js",
    "security:vulnerabilities": "node seguranca-sistema.js --vulnerabilities",
    "security:outdated": "node seguranca-sistema.js --outdated",
    "security:report": "node seguranca-sistema.js --report",
    "setup": "npm run install:all && mkdir -p logs",
    "setup:env": "cp .env.example .env && echo 'Configure o arquivo .env com suas credenciais'"
